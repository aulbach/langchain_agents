{
    "name": "Langchain Agents",
    "dockerFile": "../Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "remote.SSH.showLoginTerminal": true,
                "remote.SSH.useLocalServer": false
            },
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "github.copilot-chat",
                "github.copilot",
                "eamodio.gitlens"
            ]
        }
    },
    "mounts": [
        "source=mf-langchain-agents-devcontainer-bash-history,target=/home/${NB_USER}/.bash_history,type=volume"
    ],
    "containerEnv": {
        "LANG": "en_US.UTF-8",
        "LC_ALL": "en_US.UTF-8",
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
        "TZ": "Europe/Berlin",
        "CONTAINER_WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
        "HISTFILE": "/home/${NB_USER}/.bash_history",
        "EDITOR": "code -w"
    },
    "postStartCommand": "nbstripout --install --attributes .gitattributes --python python && nbdime config-git --enable --global && jupyter-notebook",
    "portsAttributes": {
        "8888": {
            "label": "Jupyter Notebook (Browser)",
            "onAutoForward": "notify"
        }
    },
    "forwardPorts": [
        "8888:8888"
    ],
    "privileged": true
}